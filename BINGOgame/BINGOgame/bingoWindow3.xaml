<Window x:Class="BINGOgame.bingoWindow3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BINGOgame"
        mc:Ignorable="d"
        Title="改造マリオ ビンゴカード" Height="800" Width="800" >
    <Grid Background="#b6ffff">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="1*" />
            <ColumnDefinition  Width="30*" />
            <ColumnDefinition  Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="1">
            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Center" FontSize="90" Width="Auto" Height="Auto" Margin="0,0,0,0" TextWrapping="Wrap" Text="B  I  N  G  O !"/>
        </Grid>


        <Grid Grid.Row="1" Grid.Column="1" Background="#FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1*" />
                <ColumnDefinition  Width="1*" />
                <ColumnDefinition  Width="1*" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TextBlock_0_0" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="0" Grid.Column="0" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>
            <TextBlock x:Name="TextBlock_0_1" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="0" Grid.Column="1" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>
            <TextBlock x:Name="TextBlock_0_2" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="0" Grid.Column="2" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>

            <TextBlock x:Name="TextBlock_1_0" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="1" Grid.Column="0" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>
            <TextBlock x:Name="TextBlock_1_1" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="1" Grid.Column="1" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>
            <TextBlock x:Name="TextBlock_1_2" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="1" Grid.Column="2" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>

            <TextBlock x:Name="TextBlock_2_0" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="2" Grid.Column="0" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>
            <TextBlock x:Name="TextBlock_2_1" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="2" Grid.Column="1" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>
            <TextBlock x:Name="TextBlock_2_2" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Stretch" FontSize="20" Margin="1,0,1,0" TextWrapping="Wrap" Text="" Height="Auto" Width="Auto" Grid.Row="2" Grid.Column="2" Background="#FFFFFF" PreviewMouseDown="TextBlock_PreviewMouseDown"/>

            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="0" Grid.Column="0"/>
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="0" Grid.Column="1"/>
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="0" Grid.Column="2"/>

            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Grid.Column="0"/>
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Grid.Column="1"/>
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="1" Grid.Column="2"/>

            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="2" Grid.Column="0"/>
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="2" Grid.Column="1"/>
            <Border BorderBrush="Black" BorderThickness="2" Grid.Row="2" Grid.Column="2"/>
        </Grid>
        <Border BorderBrush="Black" BorderThickness="4" Grid.Row="1" Grid.Column="1"/>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1*" />
                <ColumnDefinition  Width="1*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation=" Horizontal">
                <TextBlock                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left" FontSize="30" Margin="0,0,0,0" TextWrapping="Wrap" Text="シード値：" Width="Auto" Height="Auto"/>
                <TextBlock x:Name="TextBlock_Seed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left" FontSize="30" Margin="0,0,0,0" TextWrapping="Wrap" Text=""           Width="Auto" Height="Auto"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation=" Horizontal">
                <TextBlock                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left" FontSize="30" Margin="0,0,0,0" TextWrapping="Wrap" Text="Time" Width="Auto" Height="Auto"/>
                <TextBlock x:Name="TextBlock_Timer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left" FontSize="30" Margin="0,0,0,0" TextWrapping="Wrap" Text=""       Width="Auto" Height="Auto"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <StackPanel Orientation=" Horizontal">
                <Button HorizontalAlignment="Center" Margin="150,0,0,0" Content="スタート" Height="40" Width="200" Click="Start_Button_Click"/>
                <Button HorizontalAlignment="Center" Margin="30,0,0,0" Content="終了"    Height="40" Width="200" Click="End_Button_Click"/>
                <Button HorizontalAlignment="Center" Margin="80,10,0,0" Content="ルール設定"    Height="30" Width="70" Click="Back_Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>